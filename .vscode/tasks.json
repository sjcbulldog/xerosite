{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Angular Frontend",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Build NestJS Server",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"],
      "dependsOn": ["Build Angular Frontend"]
    },
    {
      "label": "Start NestJS Server (Development)",
      "type": "shell",
      "command": "npm",
      "args": ["run", "start:dev"],
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "group": "build",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*webpack.*compilation.*",
          "endsPattern": ".*Nest application successfully started.*"
        }
      },
      "dependsOn": ["Build Angular Frontend"]
    },
    {
      "label": "Start NestJS Server (Debug)",
      "type": "shell",
      "command": "npm",
      "args": ["run", "start:debug"],
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "group": "build",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*webpack.*compilation.*",
          "endsPattern": ".*Debugger listening on.*"
        }
      },
      "dependsOn": ["Build Angular Frontend"]
    },
    {
      "label": "Run NestJS Tests",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test"],
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Run NestJS Tests (Watch)",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test:watch"],
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "group": "test",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Run NestJS E2E Tests",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test:e2e"],
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Install NestJS Dependencies",
      "type": "shell",
      "command": "npm",
      "args": ["install"],
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Clean NestJS Build",
      "type": "shell",
      "command": "rimraf",
      "args": ["dist"],
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    }
  ]
}