{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug NestJS Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server/node_modules/@nestjs/cli/bin/nest.js",
      "args": ["start", "--debug", "--watch"],
      "cwd": "${workspaceFolder}/server",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "restart": true,
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"],
      "outFiles": ["${workspaceFolder}/server/dist/**/*.js"],
      "runtimeExecutable": "node",
      "runtimeVersion": "default",
      "preLaunchTask": "Build Angular Frontend"
    },
    {
      "name": "Debug NestJS Server (ts-node)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server/src/main.ts",
      "cwd": "${workspaceFolder}/server",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "restart": true,
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": [
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "envFile": "${workspaceFolder}/server/.env",
      "preLaunchTask": "Build Angular Frontend"
    },
    {
      "name": "Debug NestJS Server (Production Build)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server/dist/main.js",
      "cwd": "${workspaceFolder}/server",
      "env": {
        "NODE_ENV": "production"
      },
      "console": "integratedTerminal",
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"],
      "preLaunchTask": "Build NestJS Server",
      "envFile": "${workspaceFolder}/server/.env"
    },
    {
      "name": "Debug NestJS Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server/node_modules/.bin/jest",
      "args": ["--runInBand", "--no-cache"],
      "cwd": "${workspaceFolder}/server",
      "env": {
        "NODE_ENV": "test"
      },
      "console": "integratedTerminal",
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": [
        "--inspect-brk"
      ],
      "envFile": "${workspaceFolder}/server/.env.test"
    },
    {
      "name": "Debug Specific Test File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server/node_modules/.bin/jest",
      "args": ["--runInBand", "--no-cache", "${relativeFile}"],
      "cwd": "${workspaceFolder}/server",
      "env": {
        "NODE_ENV": "test"
      },
      "console": "integratedTerminal",
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": [
        "--inspect-brk"
      ],
      "envFile": "${workspaceFolder}/server/.env.test"
    },
    {
      "name": "Debug E2E Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server/node_modules/.bin/jest",
      "args": ["--config", "./test/jest-e2e.json", "--runInBand", "--no-cache"],
      "cwd": "${workspaceFolder}/server",
      "env": {
        "NODE_ENV": "test"
      },
      "console": "integratedTerminal",
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": [
        "--inspect-brk"
      ],
      "envFile": "${workspaceFolder}/server/.env.test"
    },
    {
      "name": "Attach to NestJS Server",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "localRoot": "${workspaceFolder}/server",
      "remoteRoot": "${workspaceFolder}/server",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}